<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:dw="urn:import:cat.xtec.merli.duc.client.widgets"
  ui:baseMessagesInterface="cat.xtec.merli.duc.client.messages.DucMessages"
  ui:generateFormat="com.google.gwt.i18n.server.PropertyCatalogFactory"
  ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
  ui:generateLocales="en">

  <!-- Custom styles -->

  <ui:style src="DurationEditor.css"/>

  <!-- Editor panel -->

  <g:HTMLPanel>
    <div class="input-wrapper">
      <g:LongBox ui:field="hours"/>
      <g:Label ui:field="hoursLabel">
        <ui:msg>hours</ui:msg>
      </g:Label> /
      <g:IntegerBox ui:field="minutes"/>
      <g:Label ui:field="minutesLabel">
        <ui:msg>minutes</ui:msg>
      </g:Label> /
      <g:IntegerBox ui:field="seconds"/>
      <g:Label ui:field="secondsLabel">
        <ui:msg>seconds</ui:msg>
      </g:Label>
    </div>

    <dw:InputBox ui:field="text" placeholder="Enter a duration">
      <ui:attribute name="placeholder"/>
    </dw:InputBox>
  </g:HTMLPanel>

</ui:UiBinder>
